<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bit_bag.cms_plugin.uploader.video_uploader" class="BitBag\CmsPlugin\Uploader\VideoUploader">
            <argument type="service">
                <service class="Gaufrette\Filesystem">
                    <argument>%sylius.uploader.filesystem%</argument>
                    <factory service="knp_gaufrette.filesystem_map" method="get" />
                </service>
            </argument>
        </service>
    </services>
</container>